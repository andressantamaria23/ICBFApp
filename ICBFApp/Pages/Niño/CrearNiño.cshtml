@page
@model ICBFApp.Pages.Niño.CrearNiñoModel
@{
}
<div class="container">
    <form method="POST">
        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Nombre Niño</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="nom_niño" value="@Model.niñoInfo.nom_niño">
            </div>
        </div>

        

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label" for="SelectedRH">Selecciona RH:</label>
            <div class="col-sm-6">
                <select name="RH" class="form-control">
                    <option value="">Selecciona RH</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Ciudad de Nacimiento</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="CiudadNacimiento" value="@Model.niñoInfo.CiudadNacimiento">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Telefono</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="Telefono" value="@Model.niñoInfo.Telefono">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Direccion</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="Direccion" value="@Model.niñoInfo.Direccion">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">EPS</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="EPS" value="@Model.niñoInfo.EPS">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Acudiente</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="FK_Acudiente" value="@Model.niñoInfo.FK_Acudiente">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Jardin</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="FK_Jardin" value="@Model.niñoInfo.FK_Jardin">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Madre Comunitaria</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="FK_Madre" value="@Model.niñoInfo.FK_Madre">
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>@Model.errorMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" role="button" href="/Jardines/Index">Cancel</a>
            </div>
        </div>
    </form>
</div>
