@page
@model ICBFApp.Pages.Usuario.IndexModel
@{
}
<br />
<h2>Lista de Usuarios</h2>

<a class="btn btn-primary btn-sm" href="/Usuario/CrearUsuario">Nuevo Usuario</a>

<table class="table">
	<thead>
		<tr>
			<td>ID</td>
			<td>nombre</td>
			<td>Apellido</td>
			<td>email</td>
			<td>contraseña</td>
			<td>Rol</td>
			<td>acciones</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listUsuario)
		{
			<tr>
				<td>@item.Id_usuario</td>
				<td>@item.nom_usuario</td>
				<td>@item.apell_usuario</td>
				<td>@item.email</td>
				<td>@item.Contrasena</td>
				<td>@item.Rol</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Usuario/Editar?id_usuario=@item.Id_usuario">Editar</a>
					<a class="btn btn-danger btn-sm" href="/Usuario/DeleteUsuario?id_usuario=@item.Id_usuario">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
