@page
@model ICBFApp.Pages.Asistencia.IndexModel
@{
}


<br />
<h2>Lista de Asistencia</h2>

<a class="btn btn-primary btn-sm" href="/Asistencia/CrearAsistencia">Asistencia</a>

<table class="table">
	<thead>
		<tr>
			<td>ID</td>
			<td>Niño</td>
			<td>Fecha</td>
			<td>Estado</td>
			<td>acciones</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listAsistencia)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.FK_niño</td>
				<td>@item.Fecha</td>
				<td>@item.Estado</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Asistencia/Editar?Id=@item.Id">Editar</a>
					<a class="btn btn-danger btn-sm" href="/Asistencia/Delete?Id=@item.Id">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
